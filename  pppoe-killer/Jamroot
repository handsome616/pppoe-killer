exe pkiller : [ glob src/*.cpp ]
			lib/GLib//glib
			/site-config//libnet
			/site-config//wpcap
			/site-config//wxwidgets
			/site-config//log4cxx
			: <use>/site-config//boost_1.34.1
			<find-static-library>iphlpapi
			<link>static
			<runtime-link>static
			<user-interface>gui
			<threading>multi
			<variant>release
			<toolset>msvc
			<define>WIN32
			<define>HAVE_REMOTE
			<define>GLIB_STATIC
			<define>LOG4CXX_STATIC
			;
exe pkiller_linux : [ glob src/*.cpp ]
		lib/GLib//glib
		/site-config//libnet
		/site-config//pcap
		/site-config//wx-gtk
		/site-config//log4cxx
		: <use>/site-config//boost_1.34.1
		<library>/site-config//boost_thread
		<library>/site-config//boost_serialization
		<library>/site-config//boost_signals
		<link>static
              <threading>multi
              <variant>release
		<toolset>gcc
		<define>__WXGTK__
		<define>GLIB_STATIC
		<define>LOG4CXX_STATIC
		;
install win32 : pkiller ;
install linux : pkiller_linux ;